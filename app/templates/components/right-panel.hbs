{{#unless visible}}
    <a type="button" class="btn btn-lg btn-link right-panel--toggle-button" {{action "toggle"}} title="Show menu">
        <i class="fa fa-bars"></i>
    </a>
{{/unless}}
<div class="modal-content right-panel m-a-0 {{if visible 'right-panel--visible'}}">
    <div class="modal-header">
        <button type="button" class="close" {{action "toggle"}}>
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title"><i class="fa fa-bars"></i> Menu</h4>
    </div>
    <div class="modal-body">
        <div class="clearfix">
          {{yield}}
        </div>
    </div>
    <div class="modal-footer">

    </div>

</div><!-- /.modal-content -->


