<form class="form-inline m-y-1 {{unless isFormVisible 'display-none-important'}}" {{action "submit" on="submit"}}>
    <div class="form-group">
        <label>Email</label>
      {{input value=model.email type="email" class="form-control" placeholder="jane.doe@example.com" required=true}}
    </div>
    <button type="submit" class="btn btn-primary">Send</button>
    <button type="button" class="btn btn-secondary" {{action "collapse"}}>Cancel</button>
</form>

{{#unless expanded}}
    <button class="btn btn-secondary btn-sm" {{action "expand"}}>Send on email</button>
{{else}}
  {{#if model.isNew}}
    {{#if model.isSaving}}
        <div class="alert alert-info">
            Sending...
        </div>
    {{/if}}
    {{#if model.isError}}
        <div class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            An error occured.
            Please, <a href="/feedback" class="alert-link">report a bug</a>
        </div>
    {{/if}}

  {{else}}
      <div class="alert alert-success alert-dismissible fade in">
          <button type="button" class="close" aria-label="Close" {{action "collapse"}}>
              <span aria-hidden="true">&times;</span>
          </button>
          Sent successfully! <a href="" class="alert-link" {{action "new"}}>Send more</a>
      </div>
  {{/if}}
{{/unless}}



{{yield}}
